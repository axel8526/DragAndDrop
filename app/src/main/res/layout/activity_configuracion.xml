<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

    android:id="@+id/layout_configuracion"
    android:orientation="vertical"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:background="@color/color2_dialog"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color2_dialog"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".activities.Configuracion">


        <ProgressBar

            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="125dp"

            android:backgroundTint="@android:color/white"
            android:progressTint="@android:color/white"/>

        <LinearLayout
            android:padding="15dp"
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_usuario"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:visibility="invisible" />


            <TextView
                android:layout_marginTop="12dp"
                android:id="@+id/mensaje_usuario"
                android:layout_width="332dp"

                android:layout_height="wrap_content"
                android:text="Conectando..."
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/text_ip"
                android:layout_width="150dp"
                android:textAlignment="center"
                android:textColorHint="@color/letra_boton"
                android:textColor="@android:color/white"
                android:layout_height="49dp"
                android:hint="Ingresar IP"
                android:visibility="invisible" />

            <LinearLayout
                android:id="@+id/linear_botones"
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/boton_conectar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:visibility="invisible"
                    android:background="@drawable/ic_refresh"
                    />

                <Button

                    android:textColor="@android:color/white"
                    android:id="@+id/boton_ip"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/boton_ingreso"
                    android:text="Ingresar de nuevo IP"
                    android:visibility="invisible"
                    />

            </LinearLayout>
        </LinearLayout>


    </android.support.constraint.ConstraintLayout>


</LinearLayout>